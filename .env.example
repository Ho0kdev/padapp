# MercadoPago Configuration
# Obtener credenciales en: https://www.mercadopago.com.ar/developers
# Para testing usa credenciales TEST, para producción usa credenciales de producción
MERCADOPAGO_ACCESS_TOKEN="TEST-your-access-token-here"
MERCADOPAGO_PUBLIC_KEY="TEST-your-public-key-here"
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY="TEST-your-public-key-here"

# MercadoPago Enable/Disable
# Controla si MercadoPago está habilitado como método de pago
# true = Habilitar pagos con MercadoPago (mostrar botón y procesar pagos)
# false = Deshabilitar MercadoPago (ocultar botón, solo pagos manuales)
# IMPORTANTE: Reiniciar el servidor después de cambiar este valor
NEXT_PUBLIC_MERCADOPAGO_ENABLED=false

# MercadoPago Webhook Secret
# Se usa para validar que los webhooks realmente vengan de MercadoPago
# IMPORTANTE: Obtener este secret desde tu panel de MercadoPago en:
# Tus integraciones → Tu aplicación → Webhooks → Secret key
# En desarrollo puedes dejarlo vacío (la validación se saltará con un warning)
# En producción es OBLIGATORIO configurarlo para seguridad
MERCADOPAGO_WEBHOOK_SECRET="your-webhook-secret-here"

# Next.js Build Configuration
# Controla si ESLint se ejecuta durante el build
# 0 = Ejecutar ESLint durante build (recomendado en desarrollo)
# 1 = Saltear ESLint durante build (útil para CI/CD rápidos)
NEXT_SKIP_LINT=0

# Next.js Server Configuration (Docker/Production)
# Configura en qué interfaz escucha el servidor Next.js
# 0.0.0.0 = Todas las interfaces (REQUERIDO para Docker/Dokploy)
# localhost = Solo interfaz local (NO funciona en Docker)
HOSTNAME=0.0.0.0

# Maintenance Mode (Modo Mantenimiento)
# Controla si la aplicación muestra la página de mantenimiento
# true = Activar modo mantenimiento (solo admins pueden acceder)
# false = Funcionamiento normal (todos los usuarios pueden acceder)
# IMPORTANTE:
# - Usuarios NO logueados → Página de mantenimiento
# - Usuarios con rol PLAYER/CLUB_ADMIN/REFEREE → Página de mantenimiento
# - Usuarios con rol ADMIN → Acceso completo al sistema
# - Reiniciar el servidor después de cambiar este valor
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Resend Email Service
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxx"
RESEND_FROM_EMAIL="PadelShot <noreply@padelshot.app>"

